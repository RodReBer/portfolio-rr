---
import Layout from "../layouts/Layout.astro";

import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SubTitle from "../components/SubTitle.astro";

import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import MailIcon from "../components/icons/Mail.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import Code from "../components/icons/Code.astro";
import Info from "../components/icons/Info.astro";
import AboutMe from "../components/AboutMe.astro";

import Experiencie from "../components/Experiencie.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
---

<Layout
  title="Rodrigo Rey Portfolio - Web Developer and Programmer with 2 years of experience"
  description="Hire Rodrigo Rey to create your web application. Web developer specialized in creating unique applications"
>
  <main class="px-4">
    <SectionContainer class="pt-44 pb-24">
      <img
        class="rounded-full size-12 mb-4"
        src="https://media.licdn.com/dms/image/C4D03AQEMZTwzVlyJww/profile-displayphoto-shrink_200_200/0/1660098987661?e=2147483647&v=beta&t=FgtWNhLkVea8BcbehsI6WYnxy25WjlTW8XVKbZPNm4U"
        alt="Rodrigo Rey photo"
      />
      <h1
        class="text-black dark:text-white text-3xl md:4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        HiðŸ‘‹, I'm Rodrigo Rey <a
          href="https://www.linkedin.com/in/rodrigorey2005/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="">+2 years of experience</span>. <span
          class="text-yellow-300">Web and Software Developer</span
        >
         From<span class="text-yellow-300"> Montevideo, Uruguay</span>.
        <span class="opacity-75"
          >Specialized in creating unique applications</span
        >.
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/rodrigorey2005/">
          <LinkedInIcon class="size-4 md:size-6" />
           LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/RodReBer">
          <GitHubIcon class="size-4 md:size-6" />
           GitHub
        </SocialPill>
        <SocialPill href="mailto:rodrigorey2005@gmail.com">
          <MailIcon class="size-4 md:size-6" />
           rodrigorey2005@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <SubTitle>
        <BriefCase class="size-7" />
         Work experience
      </SubTitle>
      <Experiencie />
    </SectionContainer>

    <SectionContainer id="projects">
      <SubTitle>
        <Code class="size-7" />
         projects
      </SubTitle>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about-me">
      <SubTitle>
        <Info class="size-7" />
         About me
      </SubTitle>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contact">
      <SubTitle>
        <MailIcon class="size-7" />
         Contact
      </SubTitle>
      <Contact />
    </SectionContainer>
  </main>
</Layout>
