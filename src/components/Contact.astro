---
const errors = { Name: "", Email: "", Subject: "", Message: "" };

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const Name = data.get("Name");
    const Email = data.get("Email");
    const Subject = data.get("Subject");
    const Message = data.get("Message");

    // Validaciones
    if (typeof Name !== "string" || Name.trim().length < 1) {
      errors.Name = "Please enter your name.";
    }
    if (typeof Email !== "string" || !isValidEmail(Email)) {
      errors.Email = "Please provide a valid email address.";
    }
    if (typeof Subject !== "string" || Subject.trim().length < 1) {
      errors.Subject = "Please enter a subject.";
    }
    if (typeof Message !== "string" || Message.trim().length < 1) {
      errors.Message = "Your message cannot be empty.";
    }

    const hasErrors = Object.values(errors).some((msg) => msg);

    if (!hasErrors) {
      console.log("Form submitted successfully:", { Name, Email, Subject, Message });
      return Astro.redirect("/thank-you");
    }
  } catch (error) {
    console.error(error instanceof Error ? error.message : error);
  }
}

function isValidEmail(email) {
  const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  return re.test(email);
}
