    class: "bg-[#ffcc2c]/10 text-black dark:text-white border-[#ffcc2c]",
    icon: FirebaseIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#68c7f0]/10 text-black dark:text-white border-[#68c7f0]",
    icon: TailwindIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#ff5d01]/10 text-black dark:text-white border-[#ff5d01]",
    icon: AstroIcon,
  },
  NEXTJS: {
    name: "NextJs",
    class:
      "bg-black/10 dark:bg-white/10 text-black dark:text-white border-black dark:border-white",
    icon: NextJsIcon,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#7952b3]/10 text-black dark:text-white border-[#7952b3]",
