const SKILLS = [
  {
    name: "Database",
    icon: DatabaseIcon,
    tags: [TAGS.MONGODB, TAGS.MYSQL, TAGS.MICROSOFTSQL, TAGS.FIREBASE],
  },
  {
    name: "Software",
    icon: SoftwareIcon,
    tags: [
      TAGS.VISUALCODE,
      TAGS.AWS,
      TAGS.CLOUDFLARE,
      TAGS.GIT,
      TAGS.GITLAB,
      TAGS.GITHUB,
      TAGS.NPM,
      TAGS.POSTMAN,
    ],
  },
  {
    name: "Framework",
    icon: FrameworkIcon,
    tags: [
      TAGS.BOOTSTRAP,
      TAGS.EXPRESS,
      TAGS.ASTRO,
      TAGS.NEXTJS,
      TAGS.TAILWIND,
    ],
  },
  {
    name: "Library",
    icon: LibraryIcon,
    tags: [
      TAGS.REACT,
      TAGS.HEADLESS,
      TAGS.ELECTRON,
      TAGS.REACTROUTER,
      TAGS.NODEJS,
      TAGS.JWT,
    ],
  },
  {
    name: "Languages",
    icon: LibraryIcon,
    tags: [
      TAGS.RUBY,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.JAVASCRIPT,
      TAGS.JAVA,
      TAGS.HASKELL,
      TAGS.SASS,
    ],
  },
];
---

<div
  class="relative isolate overflow-hidden bg-black/10 dark:bg-white/5 rounded-2xl shadow-2xl shadow-black/50 dark:shadow-2xl dark:shadow-white/5 px-6 pb-24 sm:pb-32 pt-10 lg:overflow-visible lg:px-0"
>
  <div
    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start lg:gap-y-10"
  >
    <div
      class="lg:col-span-2 lg:col-start-1 lg:row-start-1 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8"
    >
      <div class="lg:pr-4">
        <div class="lg:max-w-lg">
          <p
            class="text-base font-semibold leading-7 text-violet-500 dark:text-orange-400/20"
          >
            A little of me...
          </p>
          <h1
            class="mt-2 text-3xl font-bold tracking-tight dark:text-orange-400 text-gray-900 sm:text-4xl"
          >
            Rodrigo Rey
          </h1>
          <p class="mt-6 text-xl leading-8 text-gray-700 dark:text-white">
            I am a Systems Engineering student with a passion for technology and
            problem solving, which has allowed me to develop a solid base of
            technical skills throughout my academic training.
          </p>
        </div>
      </div>
    </div>
    <div
      class="-ml-12 -mt-12 p-12 lg:sticky lg:top-7 lg:col-start-2 lg:row-span-2 lg:row-start-1 lg:overflow-hidden"
    >
      <img
        class="w-[48rem] max-w-none rounded-xl bg-gray-900 shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem]"
        src="/about-me.webp"
        alt=""
      />
    </div>
    <div
      class="lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8"
    >
      <div class="lg:pr-4">
        <div
          class="max-w-xl text-base leading-7 text-gray-700 dark:text-white lg:max-w-lg"
        >
          <p>
            Additionally, I excel in communication and function effectively in
            teamwork environments. I am motivated to collaborate on projects
            that generate a positive impact on society, which reflects my
            commitment to business objectives. In my free time, I actively seek
            opportunities to learn and apply my skills in real-world situations.
          </p>
          <ul
            role="list"
            class="mt-8 space-y-8 text-gray-600 dark:text-white/50"
          >
            {
              SKILLS.map((skill) => (
                <li class="mt-8 flex gap-3 text-xs flex-row">
                  <div>
                    <skill.icon class="size-7 dark:text-orange-400 text-black" />
                  </div>
                  <span class=" flex flex-col gap-y-2 mt-1 ">
                    <strong class="font-semibold text-gray-900 dark:text-white ">
                      {skill.name}
                    </strong>
                    <div class="flex gap-3 flex-row flex-wrap z-0">
                      {skill.tags.map((tag) => (
                        <div
                          class={`flex gap-x-2 -z-10 rounded-full border  px-2 py-1 font-xs flex-wrap ${tag.class}`}
                        >
                          {tag.icon && <tag.icon class="size-4" />}

                          {tag.name}
                        </div>
                      ))}
                    </div>
                  </span>
                </li>
              ))
            }

            <p class="mt-8">
              I am ready to leverage my knowledge in the dynamic field of
              technology and innovation.
            </p>
            <h2
              class="mt-16 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
              Never stop learning!!
            </h2>
            <p class="mt-6">
              I am always looking for new challenges and opportunities to
              continue growing as a professional.
            </p>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
