import ReactRouterIcon from "./icons/ReactRouter.astro";
import NodeJsIcon from "./icons/NodeJs.astro";
import JwtIcon from "./icons/JWT.astro";
import VisualCodeIcon from "./icons/VisualCode.astro";
import AwsIcon from "./icons/AWS.astro";
import CloudFlareIcon from "./icons/CloudFlare.astro";
import GitIcon from "./icons/Git.astro";
import GitLabIcon from "./icons/GitLab.astro";
import GitHubIcon from "./icons/GitHub.astro";
import NpmIcon from "./icons/Npm.astro";
import PostManIcon from "./icons/Postman.astro";
import LibraryIcon from "./icons/Library.astro";
import FrameworkIcon from "./icons/Framework.astro";
import MongoDbIcon from "./icons/MongoDb.astro";
import MySqlIcon from "./icons/MySql.astro";
import MicrosoftSqlIcon from "./icons/MicrosoftSql.astro";
import SoftwareIcon from "./icons/Software.astro";
