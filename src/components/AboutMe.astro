import ReactIcon from "../components/icons/React.astro";
import FirebaseIcon from "../components/icons/FireBase.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import NextJsIcon from "./icons/NextJs.astro";
import BootstrapIcon from "./icons/Bootstrap.astro";
import ExpressIcon from "./icons/ExpressJs.astro";
