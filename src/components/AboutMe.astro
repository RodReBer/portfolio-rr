  },
  ELECTRON: {
    name: "Electron",
    class: "bg-[#323540]/10 text-black dark:text-white border-[#323540]",
    icon: ElectronIcon,
  },
  REACTROUTER: {
    name: "ReactRouter",
    class: "bg-[#f54856]/10 text-black dark:text-white border-[#f54856]",
    icon: ReactRouterIcon,
  },
  NODEJS: {
    name: "NodeJs",
    class: "bg-[#66cc33]/10 text-black dark:text-white border-[#66cc33]",
    icon: NodeJsIcon,
  },
  JWT: {
    name: "JWT",
    class: "bg-[#d83fff]/10 text-black dark:text-white border-[#d83fff]",
    icon: JwtIcon,
  },
  VISUALCODE: {
    name: "VisualCode",
    class: "bg-[#2aaaf2]/10 text-black dark:text-white border-[#2aaaf2]",
    icon: VisualCodeIcon,
  },
  AWS: {
    name: "AWS",
    class: "bg-[#ff9c08]/10 text-black dark:text-white border-[#ff9c08]",
    icon: AwsIcon,
  },
  CLOUDFLARE: {
    name: "CloudFlare",
    class: "bg-[#f6821f]/10 text-black dark:text-white border-[#f6821f]",
    icon: CloudFlareIcon,
  },
  GIT: {
    name: "Git",
    class: "bg-[#f44d27]/10 text-black dark:text-white border-[#f44d27]",
    icon: GitIcon,
  },
  GITLAB: {
    name: "GitLab",
    class: "bg-[#fca62d]/10 text-black dark:text-white border-[#fca62d]",
    icon: GitLabIcon,
  },
  GITHUB: {
    name: "GitHub",
    class:
      "bg-black/10 text-black dark:text-white border-black dark:border-white dark:bg-white/10",
