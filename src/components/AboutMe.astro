    class: "bg-[#5e5086]/10 text-black dark:text-white border-[#5e5086]",
    icon: HaskellIcon,
  },
  SASS: {
    name: "Sass",
    class: "bg-[#cc6699]/10 text-black dark:text-white border-[#cc6699]",
    icon: SassIcon,
  },
