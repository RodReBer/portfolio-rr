---
export interface Props {
  title?: string;
  description?: string;
  link?: string;
  date?: string;
  textLink?: string;
}

const { title, description, link, date, textLink } = Astro.props;
---

<div
  class="absolute size-3 bg-black rounded-full mt-1.5 -start-1.5 border border-gray-900 dark:border-white dark:bg-white"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-black/55 dark:text-white "
  >{date}</time/
>
<h3 class="text-lg font-semibold text-black dark:text-orange-400 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-black/65 dark:text-gray-200 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class={`inline-flex items-center px-4 py-2 text-sm font-medium 
        border dark:border-white rounded-md dark:text-white dark:bg-white/15
        dark:hover:bg-white/5 transition-all duration-500 ease-in-out
        border-violet-600 text-violet-600 hover:bg-violet-600/5 bg-violet-600/15
        `}
    >
      {textLink}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
