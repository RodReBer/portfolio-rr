---
const {
  imageSrc,
  date,
  linkProject,
  title,
  content,
  authorImage,
  authorName,
  authorNameSec,
  textColor,
  tags,
} = Astro.props;
---

<a href={linkProject} target="_blank" rel="noreferrer noopener">
  <article
    class="flex flex-col items-start justify-between  bg-gradient-to-t from-black/10 to-violet-500/50  rounded-2xl p-4  shadow-2xl shadow-black/50  dark:bg-gradient-to-t dark:from-white/5 dark:to-white/5 
    dark:shadow-2xl dark:shadow-white/5
    "
  >
    <div class="relative w-full">
      <img
        loading="lazy"
        src={imageSrc}
        alt={`Captura de pantalla del proyecto ${title}`}
        class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2] "
      />
      <div
        class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
      >
      </div>
    </div>
    <div class="max-w-xl">
      <div class="mt-8 flex items-center gap-3 text-xs flex-wrap">
        <time datetime="2020-03-16" class="text-gray-500">
          {date}
        </time>
        <div class="flex gap-3 flex-row flex-wrap z-0">
          {
            tags.map((tag) => (
              <div
                class={`flex gap-x-2 -z-10 rounded-full border  px-2 py-1 font-xs  ${tag.class}`}
              >
                {tag.icon && <tag.icon class="size-4" />}

                {tag.name}
              </div>
            ))
          }
        </div>
      </div>
      <div class="group relative">
        <h3
          class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-700
    dark:text-white dark:group-hover:text-white/65"
        >
          <span class="absolute inset-0"></span>
          {title}
        </h3>
        <p
          class="mt-5 line-clamp-3 text-sm leading-6 text-gray-700 dark:text-gray-400"
        >
          {content}
        </p>
      </div>
      <div class="relative mt-8 flex items-center gap-x-4">
        <img
          src={authorImage}
          alt=""
          class="h-10 w-10 rounded-full bg-gray-100"
        />
        <div class="text-sm leading-6">
          <p class="font-semibold" style={`color: ${textColor}`}>
            <span class="absolute inset-0"></span>
            {authorName}
          </p>
          <p class="text-gray-600">{authorNameSec}</p>
        </div>
      </div>
    </div>
  </article></a
>
